/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "outDir": "dist",
    "types": ["node", "hardhat", "hardhat-deploy"]
  },
  "include": ["hardhat.config.ts", "deploy", "scripts", "test"]
}
