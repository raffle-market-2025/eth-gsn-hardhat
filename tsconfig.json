{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "hardhat", "hardhat-deploy"]
  },
  "include": [
    "hardhat.config.ts",
    "deploy",
    "scripts",
    "test",
    "types",
    "utils",
    "helper-hardhat-config.ts"
  ]
}
